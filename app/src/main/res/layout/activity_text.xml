<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.TextActivity">

    <!--Make TextureView in Center-->
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/capture_button"
                    android:layout_width="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="@string/take_a_picture"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_camera"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="433dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageResult" android:layout_marginBottom="242dp"
                    android:layout_alignParentEnd="true" android:layout_marginEnd="142dp"
                    android:layout_alignParentStart="true" android:layout_marginStart="173dp"
                    android:layout_alignParentBottom="true" android:layout_alignParentTop="true"/>

            <ImageView
                    android:id="@+id/imageResult"
                    android:layout_width="322dp"
                    android:layout_height="206dp"
                    android:scaleType="centerCrop" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="55dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="26dp"
                    android:layout_marginBottom="478dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="39dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.138" android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"/>

            <TextView
                    android:id="@+id/txvResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="false" android:layout_alignParentBottom="true"
                    android:layout_marginBottom="313dp" android:layout_marginTop="391dp"
                    android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                    android:layout_marginStart="17dp"
                    android:hint="text result here"/>

        </RelativeLayout>
    </ScrollView>


</LinearLayout>